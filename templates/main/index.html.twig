{% extends 'base.html.twig' %}

{% block title %}ACCUEIL
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1 class="text-center">Site e-commerce</h1>
				<p class="text-center">Bienvenue dans notre boutique</p>
			</div>
			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12">
						<h2>{{category.name}}</h2>
					</div>
				{% else %}
                <div class="col-4">
					<div class="card text-white bg-primary mb-3 " style="">
						<div class="card-header">{{category.name}}</div>
						<div class="card-body">
							<h4 class="card-title"><a href="{{path('categories_list',{slug: category.slug})}}" class="text-white">Voir les oeuvres</a></h4>
							<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
						</div>
                	</div>
				</div>
				{% endif %}
			{% endfor %}
				
		</section>
		</main>
	{% endblock %}
